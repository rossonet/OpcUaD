{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
        {
            "label": "buildCode",
            "type": "shell",
            "command": "./gradlew build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$jshint-stylish"
            ]
        },
        {
            "label": "testCode",
            "type": "shell",
            "command": "./gradlew test",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$jshint-stylish"
            ]
        }
    ]
}
